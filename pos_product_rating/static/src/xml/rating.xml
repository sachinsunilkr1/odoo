<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<templates id="template_rating" xml:space="preserve">

   <t t-extend="Product">
        <t t-jquery=".price-tag" t-operation="prepend">
        <t t-if="product.product_ratings">
            <div class="overlay" >
                    <span style="margin: 0px; padding: 0px;font-size: 13px;">
                    Rating:
                    <t t-esc="product.product_ratings"/>
                </span>
            </div>
        </t>
    </t>
</t>

   <t t-extend="OrderReceipt">
        <t t-jquery=".pos-receipt .pos-receipt-contact" t-operation='append'>

            <t t-if='product.product_ratings'>
                <div>Client: <t t-esc='product.product_ratings' /></div>
            </t>
        </t>
    </t>


</templates>
</odoo>

